{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "ES2020",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },

    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}
